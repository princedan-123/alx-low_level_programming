# creates an executable called school and explicitly performs clean ups
# compiler
CC=gcc
# C source codes
SRC= main.c school.c
# object codes
OBJ=$(SRC:.c=.o)



NAME=school

# compilation flags
CFLAGS= -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re
all: $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: all fclean
