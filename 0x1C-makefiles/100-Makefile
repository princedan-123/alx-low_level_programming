# creates an executable called school and explicitly performs clean ups
# compiler
CC=gcc
# C source codes
SRC= main.c school.c
# object codes
OBJ=$(SRC:.c=.o)

CFLAGS = -Wall -Werror -Wextra -pedantic

NAME=school

.PHONY: all clean oclean fclean re

all: $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *.~ *.swp $(NAME)

oclean:
	$(RM) *.o

fclean: clean oclean

re: all fclean
